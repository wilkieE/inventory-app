// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int        @id @default(autoincrement())
  name       String
  email      String     @unique
  department String
  usageLogs  UsageLog[]
}

model Item {
  id          Int        @id @default(autoincrement())
  name        String
  description String
  status      String
  usageLogs   UsageLog[]
}

model UsageLog {
  id        Int       @id @default(autoincrement())
  startTime DateTime
  endTime   DateTime?
  user      User      @relation(fields: [userId], references: [id])
  userId    Int
  item      Item      @relation(fields: [itemId], references: [id])
  itemId    Int
}
